{
    "manifest_version": 3,
    "name": "Analisador de Termos de Uso2",
    "version": "1.0",
    "description": "Analisa e alerta sobre cl√°usulas duvidosas nos termos.",
    "permissions": [
      "scripting",
      "tabs",
      "activeTab",
      "storage"
    ],
    "host_permissions": ["<all_urls>"],
    "action": {
      "default_popup": "popup.html"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "run_at": "document_idle"
      }
    ]
  }
  